<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <link rel="stylesheet" href="static/stockmarket.css">

    <title>Stock Market</title>

    <!-- Bootstrap CSS CDN -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" crossorigin="anonymous">

    <!-- Font Awesome JS -->
    <script defer src="https://use.fontawesome.com/releases/v5.0.13/js/solid.js" integrity="sha384-tzzSw1/Vo+0N5UhStP3bvwWPq+uvzCMfrN1fEFe+xBmv1C/AtVX5K0uZtmcHitFZ" crossorigin="anonymous"></script>
    <script defer src="https://use.fontawesome.com/releases/v5.0.13/js/fontawesome.js" integrity="sha384-6OIrr52G08NpOFSZdxxz1xdNSndlD4vdcf/q2myIUVO0VsqaGHJsB0RaBE01VTOY" crossorigin="anonymous"></script>


        <!-- jQuery CDN - Slim version (=without AJAX) -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <!-- Popper.JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js" integrity="sha384-cs/chFZiN24E4KMATLdqdvsezGxaGsi4hLGOzlXwp5UZB1LY//20VyM2taTB4QvJ" crossorigin="anonymous"></script>
    <!-- Bootstrap JS -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js" integrity="sha384-uefMccjFJAIv6A+rW+L4AHf99KvxDjWSu1z9VI8SKNVmz4sk7buKt/6v9KI65qnm" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
    <script src="https://cdn.plot.ly/plotly-latest.min.js"></script>


</head>

<body>
    <div class="wrapper">
        <% include ./partials/navbar %>

        <% include ./partials/messages %>
            <div id="stocksdata">
                <div class="container-fluid" id="containerdiv">
                        <div class="card" id="cardtickerdiv">
                            <div class="card-body">
                                <marquee>
                                <ul id="webticker-update-example" class="tic-hover" >
                                    <% for(var i = 0; i < stocks.length; i++) { %>
                                    <li class="cardscroll" >
                                        <div><%= stocks[i][0] %></div>
                                        <div><span class="text-success">Open</span>:$<%= stocks[i][2] %></div>
           
                                    </li>   
                                    <% } %>
                                </ul>
                            </marquee>
                             </div>
                             </div>
                                <div class="box box-transparent no-shadow" id="stockdetailsdiv">
                                    <div class="box-body" id="stockdetail">
                                        <div class="d-md-flex justify-content-between align-items-center d-inline-block">
                                            <h2 class="my-0"><%= stocks[0][1] %></h2>
                                                <div>
                                                    <p class="mb-2 text-fade">Current Price</p>
                                                    <h4 class="mb-0"><span class="text-success">0.24$</span></h4>
                                                </div>
                                                 <div class="d-lg-block d-none">
                                                    <p class="mb-2 text-fade">Low Price</p>
                                                    <h4 class="mb-0"><span class="text-success">0.45$</span></h4>
                                                </div>
                                                <div class="d-lg-block d-none">
                                                    <p class="mb-2 text-fade">High Price</p>
                                                    <h4 class="mb-0"><span class="ml-2 text-dark">0.21$</span></h4>
                                                </div>
                                                <div class="d-lg-block d-none">
                                                    <p class="mb-2 text-fade">Prev Day Close</p>
                                                    <h4 class="mb-0"><span class="ml-2 text-danger">0.11$</span></h4>
                                                </div>
                                                <div>
                                                    <p class="mb-2 text-fade">Prev Day Start</p>
                                                    <h4 class="mb-0"><span class="ml-2 text-dark">142.21$</span></h4>
                                                </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
            </div>


            <div id="stocksListAndPlotArea">
                
                </br>
                    <div class="row">
                        <div class="col-sm-5">
                            <div class="card" style="width: 25rem;">
                          <div class="card-body">
                            <h5 class="card-title">Stocks</h5>
                                    <div class="p-1 bg-light rounded rounded-pill shadow-sm mb-4" id="stockListBar">
                                        <div class="input-group">
                                            <input type="search" placeholder="Search Stock's" aria-describedby="button-addon1" class="form-control border-0 bg-light" id="myInput">
                                         <div class="input-group-append">
                                        <button id="button-addon1" type="submit" class="btn btn-link text-primary"><i class="fa fa-search"></i></button>
                                      </div>
                                    </div>
                                  </div>
                            <div class="list-group list-group-flush">
                                <table id="myTable">
                             <% for(var i = 0; i < stocks.length; i++) { %>
                             <tr>
                                <td>
                              <a href="buystock/<%= i %>" class="list-group-item d-flex justify-content-between align-items-center list-group-item-action"><%= stocks[i][1] %>
                              </a>
                                </td>
                            </tr>
                              <% } %>
                            </div>
                          </div>
                        </div>
                        </div>
                    </div>
            </div>
            
        </div>
    </div>
</body>
<script type="text/javascript">
    
    <script type="text/javascript">
        function myFunction(){
            var input, filter, table, tr, td, i, txtValue;
            input = document.getElementbyId("myInput");
            filter = input.value.toUpperCase();
            table=document.getElementbyId("myTable");
            tr=table.getElementsByTagName("tr");
            console.log(tr.length);
        for (i=0; i<tr.length; i++) {
            td=tr[i].getElementsByTagName("td")[0];
            if (td) {
                txtValue = td.textContent || td.innerText;
                if (txtValue.toUpperCase().indexOf(filter) > -1){
                    tr[i].style.display = "";
                }
                else{
                    tr[i].style.display = "none";                   
                }
            }
         }

     }
    </script>
</script>

</html>